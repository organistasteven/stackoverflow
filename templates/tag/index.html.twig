{% extends 'base.html.twig' %}

{% block title %}Liste des tags{% endblock %}

{% block body %}
    <h1>Liste des tags</h1>

    <a href="{{ path('tag_new') }}" class="btn btn-success mb-3">Nouveau Tag</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Libellé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('tag_show', {'id': tag.id}) }}" class="btn btn-sm btn-success">Afficher</a>
                    <a href="{{ path('tag_edit', {'id': tag.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Acun tag trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}